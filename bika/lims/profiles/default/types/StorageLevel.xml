<?xml version="1.0"?>
<object name="StorageLevel"
        meta_type="Factory-based Type Information with dynamic views"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="plone"
        purge="True">
 <property name="title" i18n:translate="">Storage level</property>
 <property name="description"></property>
 <property name="content_icon">++resource++bika.sanbi.images/storagelevel.png</property>
 <property name="content_meta_type">StorageLevel</property>
 <property name="product">bika.lims</property>
 <property name="factory">addStorageLevel</property>
 <property name="add_view_expr"></property>
 <property name="link_target"></property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
  <element value="StorageLevel"/>
  <element value="StorageLocation"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view_fallback">False</property>

 <property name="immediate_view">base_edit</property>
 <property name="default_view">storages</property>
 <property name="view_methods">
  <element value="storages"/>
 </property>

 <alias from="(Default)" to="storages"/>
 <alias from="view" to="storages"/>
 <alias from="edit" to="base_edit"/>

 <action title="storages"
         action_id="view"
         category="object"
         condition_expr=""
         url_expr="string:${object_url}/storages"
         i18n:attributes="title"
         i18n:domain="plone"
         visible="True">
  <permission value="View"/>
 </action>

 <action title="Edit"
         action_id="edit"
         category="object"
         condition_expr=""
         url_expr="string:${object_url}/edit"
         i18n:attributes="title"
         i18n:domain="plone"
         visible="True">
  <permission value="Modify portal content"/>
 </action>
 
</object>
